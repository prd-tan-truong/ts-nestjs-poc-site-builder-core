{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/sites/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/sites/tsconfig.app.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "ts-nestjs-poc-site-builder-core": {
      "type": "application",
      "root": "apps/sites",
      "entryFile": "main",
      "sourceRoot": "apps/sites/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sites/tsconfig.app.json"
      }
    },
    "sites": {
      "type": "application",
      "root": "apps/sites",
      "entryFile": "main",
      "sourceRoot": "apps/sites/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sites/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/sites"
}
